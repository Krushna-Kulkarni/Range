    "url": "https://github.com/Krushna-Kulkarni/Range/issues"
  },
  "homepage": "https://github.com/Krushna-Kulkarni/Range#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "concurrently": "^8.2.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.2",
    "nodemon": "^3.0.1",
    "socket.io": "^4.7.2"
  }
